generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  creator   String?
  updater   String?
  username  String   @unique
  password  String
  email     String?
  nickname  String?
  age       Int?
  sex       Int      @default(1)
  admin     Int      @default(0)
  avatar    String?
  organId   String?
  state     Int      @default(1)
  phone     String?
  Organ     Organ?   @relation(fields: [organId], references: [id])
  Post      Post[]   @relation("PostToUser")
  Role      Role[]   @relation("RoleToUser")

  @@map("users")
}

model Menu {
  id          String   @id @default(cuid())
  name        String
  description String?
  icon        String?
  sort        Int      @default(0)
  state       Int      @default(1)
  type        Int      @default(0)
  route       String?
  outside     Boolean  @default(false)
  title       String?
  authNames   String[]
  parentId    String?
  roles       Role[]   @relation("MenuToRole")

  @@map("menus")
}

model Organ {
  id          String  @id @default(cuid())
  name        String
  description String?
  parentId    Int     @default(0)
  sort        Int     @default(0)
  state       Int     @default(1)
  users       User[]

  @@map("organ")
}

model Post {
  id          String  @id @default(cuid())
  name        String
  description String?
  parentId    Int     @default(0)
  sort        Int     @default(0)
  state       Int     @default(1)
  users       User[]  @relation("PostToUser")

  @@map("posts")
}

model Role {
  id          String  @id @default(cuid())
  name        String
  description String?
  parentId    Int     @default(0)
  sort        Int     @default(0)
  state       Int     @default(1)
  menus       Menu[]  @relation("MenuToRole")
  users       User[]  @relation("RoleToUser")

  @@map("roles")
}
