generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  creator   Int?
  updater   Int?
  username  String   @unique
  password  String
  email     String?
  nickname  String?
  phone     String?
  age       Int?
  sex       Int      @default(1)
  admin     Int      @default(0)
  avatar    String?
  organId   Int?
  state     Int      @default(1)
  Organ     Organ?   @relation(fields: [organId], references: [id])
  Post      Post[]   @relation("PostToUser")
  Role      Role[]   @relation("RoleToUser")

  @@map("users")
}

model Menu {
  id          Int     @id @default(autoincrement())
  name        String
  route       String
  description String?
  icon        String?
  title       String?
  sort        Int     @default(0)
  state       Int     @default(1)
  type        Int     @default(0)
  outside     Boolean @default(false)
  crud        Int[]   @default([0, 1, 2, 3])
  roles       Role[]  @relation("MenuToRole")

  @@map("menus")
}

model Organ {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  parentId    Int     @default(0)
  sort        Int     @default(0)
  state       Int     @default(1)
  users       User[]

  @@map("organ")
}

model Post {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  parentId    Int     @default(0)
  sort        Int     @default(0)
  state       Int     @default(1)
  users       User[]  @relation("PostToUser")

  @@map("posts")
}

model Role {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  parentId    Int     @default(0)
  sort        Int     @default(0)
  state       Int     @default(1)
  menus       Menu[]  @relation("MenuToRole")
  users       User[]  @relation("RoleToUser")

  @@map("roles")
}
