generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  creator   Int?
  updater   Int?
  username  String   @unique
  password  String
  email     String?
  nickname  String?
  phone     String?
  age       Int?
  admin     Int      @default(0)
  sex       Int      @default(1)
  state     Int      @default(1)
  Post      Post[]
  Role      Role[]
  Organ     Organ?   @relation(fields: [organId], references: [id])
  organId   Int?

  @@map("users")
}

model Menu {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  icon        String?
  sort        Int     @default(0)
  state       Int     @default(1)
  roles       Role[]
  crud        Int[]   @default([0, 1, 2, 3])
}

model Organ {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  parentId    Int     @default(0)
  sort        Int     @default(0)
  state       Int     @default(1)
  users       User[]
}

model Post {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  parentId    Int     @default(0)
  sort        Int     @default(0)
  state       Int     @default(1)
  users       User[]
}

model Role {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  parentId    Int     @default(0)
  sort        Int     @default(0)
  state       Int     @default(1)
  users       User[]
  menus       Menu[]
}
