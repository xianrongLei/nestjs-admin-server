// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  creator   Int?
  updater   Int?

  username String  @unique
  password String
  email    String?
  nickname String?
  phone    String?
  age      Int?
  sex      Int     @default(1)
  orgId    Int     @default(0)
  roles    Role[]
  posts    Post[]

  @@map("users")
}

model Organ {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  parentId    Int     @default(0)
  sort        Int     @default(0)
}

model Menus {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  icon        String?
  parentId    Int     @default(0)
  sort        Int     @default(0)
}

model Role {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  User        User?   @relation(fields: [userId], references: [id])
  userId      Int?
  parentId    Int     @default(0)
  sort        Int     @default(0)
}

model Post {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  User        User?   @relation(fields: [userId], references: [id])
  userId      Int?
  parentId    Int     @default(0)
  sort        Int     @default(0)
}
